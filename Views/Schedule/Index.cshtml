@using Newtonsoft.Json
@model IEnumerable<LightInEveryHouse.Models.Schedule>

@{
    ViewData["Title"] = "Графік відключення";
}

<h1>Графік відключення</h1>

<div class="container p-3">
    <div class="row pt-4">
        <label for="addressFilter">Вибрати адресу:</label>
        <input type="text" id="addressFilter" name="addressFilter" class="form-control" placeholder="Почніть вводити адресу">
    </div>
</div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Часові проміжки
                    </th>
                    <th>
                        00-01
                    </th>
                    <th>
                        01-02
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Day</td>
                        <td width="25%">@obj.StartTime</td>
                        <td width="25%">@obj.FinishTime</td>
                    </tr>
                }


            </tbody>
        </table>
    }
    else
    {
        <p>No driver</p>
    }
</div>

